swiper{
  height: 100%;
}
.swiperBox{
  height: 90%;
}
scroll-view{
  height: 100%;
  overflow: hidden;
  text-align: center;
  display: flex;
  align-items: center;
  justify-content: center;
}
.container{
  width: 100vw;
  height: 100vh;
}
.swiperBox image{
  height: 100%;
  width: 100%!important;
 
}
.readBottom{
  height: 10%;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 40rpx;
  border:1px solid #eaeaea;

}
.pageBtn{
  width: 180rpx;
  height: 70rpx;
  border:1px solid #eaeaea;
  display: flex;
  align-items: center;
  text-align: center;
  justify-content: space-around;
  border-radius: 0.8rpx;
}
.logM{
  height: 70rpx;
  display: flex;
  align-items: center;
  padding: 0 20rpx;
  background-color:#F5F5F5 ;
  font-size: 32rpx;
  border-radius: 8rpx;

}
.readBottom input{
    width: 100rpx;
    height: 70rpx;
    font-size: 32rpx;
    text-align: center;
    background-color: #fff;
}

.bookClassify{
  position: fixed;
  box-sizing: border-box;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  z-index: 200;
  padding-left: 230rpx;
  transform: translate(100%);
  transition:all 0.3s ;
}
.bookClassify.showBookClassify{
  transform: none;

}
.bookClassifyBox{
  width: 100%;
  height: 100%;
  background-color: #fff;
 
  
}
.bookClassifyTitle{
    height: 8%;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 0 10rpx;
    border-bottom: 1px solid #EAEAEA;
    font-size: 32rpx;
    text-align: center;
    color: #222222;
}
.bookClassifyItem{
  font-size: 28rpx;
  color: #222222;
  /* width: 230rpx; */
  box-sizing: border-box;
  padding: 0 10rpx;
  height: 85rpx;
  text-align: center;
  line-height: 85rpx;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;

}
.bookClassifyItem.cur{
  /* background-color:#9A141E ; */
  border: 1px solid #9A141E;
  color: #9A141E;
}
.jBtns{
  height: 9%;
  background-color: rgb(215, 215,215);
  display: flex;
}
.jBtns view{
  width: 50%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size:32rpx ;
  color: #222222;


}
.bookClassifyList{
  height: 100%;
  position: relative;
}
.pressList{
  height: 83%;
  position: relative;
  padding-right:100rpx ;
}
.jBtns view:last-child{
  color: #fff;
  background-color: #9A141E;
}
.zoomView{
  position: fixed;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  z-index: 100000;
  background-color: #000;
}
.zoomView image{
  width: 600rpx;
  height: 850rpx;
  padding-top: 100rpx;
  /* height: 100%; */


}