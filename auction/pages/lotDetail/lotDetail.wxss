.lotSwiper{

    height:620rpx ;
    position: relative;

}
.lotSwiper swiper{
  height: 100%!important;
}
.lotSwiper swiper image{
  width: 100%;
  height: 100%;
}
.bannerRight{
  position: absolute;
  z-index: 10;
  right: 0;
  bottom: 75rpx;
}
.bannerRight view{
  width: 107rpx;
  text-align: center;
  height: 50rpx;
