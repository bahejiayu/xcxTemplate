  background-color: #F0F0F0;
  line-height: 50rpx;
  font-size:24rpx ;
  color: #A2A2A2;
  box-sizing: border-box;
  padding: 0 10rpx;
  border-top-left-radius: 6rpx;
  border-bottom-left-radius: 6rpx;
}
.bannerRight view:last-child{
  margin-top: 30rpx;
}
