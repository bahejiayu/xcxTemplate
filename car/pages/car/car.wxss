.carItem{
  position: relative;
  padding-bottom: 50rpx;
  overflow: hidden;
  border-bottom: 1px solid #EAEAEA;
  margin-bottom: 50rpx;

}
.carContainer{
  height: 230rpx;
  padding-left:250rpx ;
  position: relative;
  transition: all 0.3s;
}
.carContainer.arrowLeft{
    transform:translateX(-160rpx) ;
}
.carBox{
  padding-top: 30rpx;
  padding: 0 40rpx;
  padding-bottom: 120rpx;
}
.wai_ {

  width:34rpx;
  height:34rpx;
  background-color:#fff;
  border:2.5rpx solid #A2A2A2;
  -webkit-border-radius:50%;
  border-radius:50%;
  vertical-align:middle;
  position: absolute;
  display: inline-block;
  left: 0;
  top: 50%;
  transform:translateY(-50%) ;
  
  }
  .carFixBottom .wai_{
    position: relative;
    transform: none;
    margin-right: 12rpx;
  }
  .wai_.cur{
     border-color: #9A141E!important;
      background-color: #9A141E!important;
  }
  .guo_{
      position: absolute;
       left: 8rpx; 
       top: 10rpx; 
      width: 20rpx;
      height: 10rpx;
      border-left: 4rpx solid #fff;
      border-bottom: 4rpx solid #fff;
      -webkit-transform: rotate(-45deg);
      -ms-transform: rotate(-45deg);
      display: none;
      transform: rotate(-45deg);
  }
  .cur .guo_{
    display: block;
    }
  .goodsImgContainer{
    width:170rpx ;
    height: 230rpx;
    top: 0;
    left: 56rpx;
    position: absolute;
  }
.goodsImgContainer image{
  width: 100%;
  height: 100%;
}
.carContent{
  height: 100%;
}
.carGoodName{
  font-size: 30rpx;
  color: #000000;
  line-height: 42rpx;
  margin-bottom: 14rpx;
  text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  line-clamp: 2;
  -webkit-box-orient: vertical;


}
.carGoodWriter{
  font-size:26rpx ;
  color: #222222;
  line-height:37rpx ;
  margin-bottom: 2rpx;
}
.pressHourse{
  font-size: 24rpx;
  color: #A2A2A2;
  line-height: 33rpx;
}
.carContent{
  position: relative;
}
.carConBottom{
  position: absolute;
  bottom: 0;
  box-sizing: border-box;
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.carPrice{
  font-size:36rpx ;
  color: #222222;
}
.carRange{
  display: flex;
}
.carRangeBtn{
    width:36rpx ;
    height: 36rpx;
    background-color: #f5f5f5;
    display: flex;
    align-items: center;
    justify-content: center;
    color:#dcdcdc ;
    border-radius: 5rpx;


}
.carRangeTxt{
  width: 75rpx;
  font-size:32rpx ;
  line-height: 36rpx;

  color: #222222;
  text-align: center;

}
.carRangeBtn.cur{
  background-color: #dbdbdb;
  color: #fff;
}


.carFixBottom{
  position: fixed;
  width: 100%;
  box-sizing: border-box;
  padding: 0 40rpx;
  height: 112rpx;
  background-color: #fff;
  z-index: 100;
  bottom: 0;
  box-shadow: 0px -5rpx 6rpx  #EAEAEA;
  display: flex;
  justify-content: space-between;
  align-items: center;

}

.carFixL{
  display: flex;
  align-items: center;
  font-size: 34rpx;
  color: #A2A2A2;
}
.carFixR{
  display: flex;
  align-items: center;
}

.carFixBtn{
  width: 180rpx;
  height: 74rpx;
  background-color: #9A141E;
  color: #fff;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 8rpx;
  margin-left: 40rpx;
  font-size: 30rpx;
}










