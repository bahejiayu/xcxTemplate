.walletBox{
  background-color: #457AE3;
  color: #fff;
  height: 256rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
}
.walletBox view:first-child{
  font-size: 34rpx;
}
.walletBox view:last-child{
  font-size: 80rpx;
}
.paymentBox{
  padding: 40rpx;
}

.paymentTit{
  font-size: 34rpx;
  color: #222222;
  margin-bottom: 20rpx;
}
.paymentInp{
  padding-left: 40rpx;
  position: relative;
  height: 41rpx;
  padding-bottom: 14rpx;
  border-bottom: 2rpx solid #EAEAEA;
}

.paymentInpL{
  position: absolute;
  left: 0;
  font-size:32rpx;
  color: #222;
  top: 50%;
  transform: translateY(-60%);
}
.paymentInpL input{
  width: 100%;
  height: 100%;
}
.inpStyle{
  font-size: 32rpx;
}
.paymentInp input{
  font-size: 52rpx;
}
.depositFix{
  position: fixed;
  padding: 0 40rpx;
  padding-bottom: 70rpx;
  width: 100%;
  box-sizing: border-box;
  bottom: 0;
}
.isOk{
  color: #fff;
  background-color:#457AE3!important ;
}
.depositTip{
  font-size: 24rpx;
  display: flex;
  justify-content: center;
  margin-top: 24rpx;
  color: #A2A2A2;
}
.depositTip navigator{
  color: #457AE3;
}
.nowGetBox{
  background-color:#457AE3 ;
}
.nowGetLine{
  height: 94rpx;
  background-color: rgba(255, 255, 255, 0.2);
  font-size:34rpx ;
  color: #fff;
}
.topUp{
  padding: 0 40rpx;
}
.topUp navigator{
  height: 105rpx;
  border-bottom: 2rpx solid #EAEAEA;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.topUpL {
  display: flex;
  font-size: 32rpx;
  color: #222222;
}
/* .topUpIcon image{
  width: ;
} */
.topUp .icon{
    font-size:28rpx ;
    color: #222222;
}

.walletTop{
  position: relative;
}
.depExplain{
  position: absolute;
  font-size: 22rpx;
  color: #fff;
  right: 0;
  background-color: rgba(255, 255, 255, 0.2);
padding: 10rpx 0;
  padding-left: 20rpx;
  border-top-left-radius: 20rpx;
  border-bottom-left-radius: 20rpx;
  top: 50rpx;

}

