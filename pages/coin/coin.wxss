.topUp .icon{
    font-size:28rpx ;
    color: #222222;
}
.transactionTit{
  height: 105rpx;
  text-align: center;
  line-height: 105rpx;
  font-size: 32rpx;
  color: #696F7C;
}
.topUpIcon image{
  width: 50rpx;
  vertical-align: middle;
  margin-right: 14rpx;
  margin-top: -4rpx;
  height: 50rpx;
}
.transactionNav{
  background-color: #F9F9F9;
  padding: 0 40rpx;
}
.tranNavList{
  display: flex;
  justify-content: space-around;
  border-bottom: 2rpx solid  #EAEAEA;
}
.tranNavList view{
  font-size: 32rpx;
  height: 75rpx;
  line-height: 75rpx;
  position: relative;
  color: #A2A2A2;
}
.tranNavList view.cur{
  font-weight: bold;
  color: #457AE3;
}
.tranNavList view.cur::before{
    content: '';
    position: absolute;
    width: 64rpx;
    height: 4rpx;
    background-color: #457AE3;
    bottom: 0;
    left: 50%;
    transform: translate(-50%);
}
.transactionList{
  padding: 0 40rpx;
}
.transactionItem navigator{
  display: block;
  height: 140rpx;
  border-bottom: 2rpx solid  #EAEAEA;
  display: flex;
  align-items: center;
  justify-content: space-between;
  position: relative;
  
}
.transactionItemL view:first-child{
  font-size: 30rpx;
  padding-bottom: 6rpx;
  color: #222222;
}
.transactionItemL view:last-child{
  font-size: 26rpx;
  color: #A2A2A2;
}

.transactionItemR{
