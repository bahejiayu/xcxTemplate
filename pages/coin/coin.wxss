.walletBox{
  background-color: #457AE3;
  color: #fff;
  height: 256rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
}
.kongBox{
  padding-top: 40rpx;
}
.balanceTop{
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
}
.balanceBox{
  margin-top: 256rpx;
  position: relative;
  z-index: 100;
  background-color: #fff;
}
.walletBox view:first-child{
  font-size: 34rpx;
}
.walletBox view:last-child{
  font-size: 80rpx;
}
.walletDetail{
  background-color: #457AE3;

}
.walletDetailBox{
  height:152rpx;
  background-color: rgba(255, 255, 255, 0.2);
  display: flex;
  justify-content: space-around;
  align-items: center;
  position: relative;

}
.walletDetailBox::before{
  content: '';
  position: absolute;
  width: 1px;
  height: 88rpx;
  background-color: rgba(255, 255, 255, .3);
  left: 50%;
  top: 50%;
  transform: translate(-50%,-50%);
}
.walletDetailItem{
  color: #fff;
}
.walletDetailItem view{
  text-align: center;
}
.walletDetailItem view:first-child{
  font-size: 36rpx;
}
.walletDetailItem view:last-child{
  font-size: 26rpx;
}
.topUp{
  padding: 0 40rpx;
}
.topUp navigator{
  height: 105rpx;
  border-bottom: 2rpx solid #EAEAEA;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.topUpL {
  display: flex;
  font-size: 32rpx;
  color: #222222;
}
